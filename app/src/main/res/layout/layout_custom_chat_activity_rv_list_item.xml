<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message_receiver"
        tools:text="hi man, how  you?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:paddingLeft="100dp"
        android:padding="8dp"
        android:textColor="#0C0C0C"
        android:text="18sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/reciver_message_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp" />



    <TextView
        android:id="@+id/tv_message_receiver_time"
        tools:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#0C0C0C"
        app:layout_constraintLeft_toRightOf="@+id/tv_message_receiver"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_message_receiver" />

    <TextView
        android:id="@+id/tv_message_sender"
        tools:text="hi man, h?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:padding="8dp"
        android:text="18sp"
        android:paddingLeft="90dp"
        android:textColor="#0C0C0C"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/sender_message_layout"
        android:layout_marginLeft="8dp" />



    <TextView
        android:paddingRight="10dp"
        android:id="@+id/tv_message_sender_time"
        tools:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#0C0C0C"
        app:layout_constraintRight_toLeftOf="@+id/tv_message_sender"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_message_sender" />



</androidx.constraintlayout.widget.ConstraintLayout>